#!/usr/bin/env php
<?php

require __DIR__ . '/vendor/autoload.php';

use Phel\Main;

if ($argc <= 1) {
    Main::renderHelp();
    exit;
}

$currentDir = getcwd() . DIRECTORY_SEPARATOR;
$commandName = $argv[1];
$arguments = array_slice($argv, 2);

Main::create($currentDir, $commandName, $arguments)->run();
