#!/usr/bin/env php
<?php

$slash = DIRECTORY_SEPARATOR;
require_once __DIR__ . "{$slash}src{$slash}php{$slash}Main.php";

use Phel\Main;

if ($argc <= 1) {
    echo Main::HELP_TEXT;
    exit;
}

$currentDir = getcwd() . DIRECTORY_SEPARATOR;
$commandName = $argv[1];
$arguments = array_slice($argv, 2);

try {
    $main = Main::create($currentDir);
    $main->run($commandName, $arguments);
} catch (Exception $e) {
    print $e->getMessage() . PHP_EOL;
}
